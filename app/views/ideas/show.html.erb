<div class="container col-md-6">

  <div>
    <div>
      <b style = "font-size: 40px;"><%= @idea.title %></b>
      &nbsp&nbsp
      <%= link_to "+1", upvote_idea_path(@idea), method: :post, class: "btn btn-primary btn-xs" %>
      &nbsp
      <%= pluralize(@idea.votes.count, "vote") %>
      &nbsp
      <%= link_to "-1", cancel_upvote_idea_path(@idea), method: :delete, class: "btn btn-default btn-xs" %>
      <div class="pull-right">
        <% if @idea.editable_by?(current_user) %>
          <%= link_to "Edit", edit_idea_path(@idea), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", @idea, method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure?"} %>
        <% end %>
      </div>
    </div>
  </div>

  <br>

  <div style = "font-size: 16px; color: grey;">
    <%= @idea.description %>
  </div>

  <br>
  <br>

  <div>
    <h3>Comments</h3>
  </div>


</div>
